{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Checkcard C1 - AI Schema",
  "description": "Schema for Step C1: Orchestrator Clarify Phase",
  "type": "object",
  "required": ["inputs", "outputs"],
  "properties": {
    "inputs": {
      "type": "object",
      "required": ["spec_file_path"],
      "properties": {
        "spec_file_path": {
          "type": "string",
          "description": "Path to spec file from Step B1"
        }
      }
    },
    "outputs": {
      "type": "object",
      "required": ["user_approved_spec", "spec_file_path"],
      "properties": {
        "user_approved_spec": {
          "type": "boolean",
          "description": "Whether user approved the spec"
        },
        "spec_file_path": {
          "type": "string",
          "description": "Path to the (possibly updated) spec file"
        }
      }
    }
  }
}
