{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Checkcard B1 - AI Schema",
  "description": "Schema for Step B1: Planner Specify Phase",
  "type": "object",
  "required": ["inputs", "outputs"],
  "properties": {
    "inputs": {
      "type": "object",
      "required": ["user_story"],
      "properties": {
        "user_story": {
          "type": "string",
          "description": "User story from Step A"
        }
      }
    },
    "outputs": {
      "type": "object",
      "required": ["spec_file_path"],
      "properties": {
        "spec_file_path": {
          "type": "string",
          "pattern": "^\\.specify/.*\\.md$",
          "description": "Path to the generated specification file"
        }
      }
    }
  }
}
